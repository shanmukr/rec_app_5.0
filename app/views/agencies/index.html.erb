<div class="top_padding_50">
  <div class="well well-sm">
    <span class="lead"> Agencies : </span>
    <span class="badge"> <%= @agencies.size %></span>
    <span class="pull-right">
      <%= link_to 'Add Agency', new_agency_path, :class=>"btn btn-primary" %>
    </span>
  </div>
  <div class="well table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th> # </th>
          <th>Agency Name </th>
          <th>Created on</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @agencies.each_with_index do |agency, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= agency.name %></td>
            <td><%= print_date(agency.created_at) %></td>												
            <td><%= link_to 'Edit', edit_agency_path(agency) %>
          </tr>
        <% end %>
      </tbody>	
    </table>
  </div>
</div>
