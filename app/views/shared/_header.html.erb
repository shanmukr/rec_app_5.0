<div class="row top_bottom_margin_10">
  <div class="col-sm-6">
      <%= link_to image_tag("MirafraLogo.gif", :size => "120x40" ), :controller => "home", :action => "index" %>
  </div>
  <div class="col-sm-6 pull-right text-right">
    <%= "Mirafra Recruitment" %>
  </div>
  <div class="col-sm-6 pull-right text-right">
    <% if logged_cur_emp %>
      <% obj = logged_cur_emp %>
      <%= "login: " + obj['name'] + " | " %>
			<%= link_to "logout", :controller => "home", :action => "logout" %>
    <% end %>
  </div>
</div>
<% if logged_cur_emp %>
  <div class="well well-sm"> 
  <div class="navbar-collapse collapse">
    <ul class="nav nav-pills nav-justified">
      <% obj = logged_cur_emp %>
      <% if (obj['employee_type'] != "HR" ) %>
        <li> <%= link_to "My Interviews", :controller => "resumes", :action => "my_interviews" %></li>
      <% elsif (obj['employee_type'] == "HR" ) %>
        <li> <%= link_to "Upload Resume", :controller => "resumes", :action => "new" %></li>
      <% end %>
      <li> <%= link_to "My Resumes", :controller => "resumes", :action => "my_resumes" %></li>
      <li> <%= link_to "Interview Calendar", :controller => "resumes", :action => "index" %></li>
      <% if (obj['employee_type'] == "ADMIN" ) %>
        <li> <%= link_to "All Employees", :controller => "employees", :action => "index" %></li>
      <% elsif (obj['employee_type'] == "MANAGER" ) %>
        <li> <%= link_to "My Employees", :controller => "employees", :action => "my_employees" %></li>
			<% end %>
      <li class="nav-item dropdown">
        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Misc
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <li> <%= link_to "All Requirements", :controller => "requirements", :action => "index" %></li>
          <li> <%= link_to "My Requirements", :controller => "requirements", :action => "my_requirements" %></li>
          <li> <%= link_to "Designations", :controller => "designations", :action => "index" %></li>
          <li> <%= link_to "Portals", :controller => "portals", :action => "index" %></li>
          <li> <%= link_to "Groups", :controller => "groups", :action => "index" %></li>
          <li> <%= link_to "Agencies", :controller => "agencies", :action => "index" %></li>
        </ul>
      </li>
      <li class="nav-item dropdown">
         <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Messages
            <span class="caret"></span>
         </a>
         <ul class="dropdown-menu">
          <li> <%= link_to "Inbox", :controller => "resumes", :action => "inbox" %></li>
          <li> <%= link_to "Outbox", :controller => "resumes", :action => "outbox" %></li>
          <li> <%= link_to "trash", :controller => "resumes", :action => "trash" %></li>
         </ul>
      <li><a href="#">Export XLS</a></li>
    </ul>
  </div>
  </div>
	<footer>
    <div class="pull_down"> 
      <div class="well well-sm"> 
        <div class="navbar-collapse collapse">
          <ul class="nav nav-pills nav-justified">
            <% obj = logged_cur_emp %>
            <% if (obj['employee_type'] == "HR" ) %>
              <li> <%= link_to "New", :controller => "resumes", :action => "resumes_new" %></li>
            <% end %>
            <li> <%= link_to "Forwarded", :controller => "resumes", :action => "forwarded" %></li>
            <li> <%= link_to "Shortlisted", :controller => "resumes", :action => "shortlisted" %></li>
            <li> <%= link_to "Interviews", :controller => "resumes", :action => "scheduled_interviews" %></li>
            <li> <%= link_to "Hold", :controller => "resumes", :action => "hold" %></li>
            <li> <%= link_to "Rejected", :controller => "resumes", :action => "resumes_rejected" %></li>
            <li> <%= link_to "Offered", :controller => "resumes", :action => "resumes_offered" %></li>
            <li> <%= link_to "Joining", :controller => "resumes", :action => "resumes_joining" %></li>
            <li> <%= link_to "Future", :controller => "resumes", :action => "resumes_future" %></li>
          </ul>
        </div>
      </div>
    </div>
  </footer>
<% end %>
