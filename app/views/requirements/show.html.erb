<div class="top_padding_50">
  <div class="well well-sm">
    <span class="lead"> <%= "showing details of requirement \'#{@requirement.name}'\." %> </span>
    <span class="pull-right">
      <%= link_to "Back", :action => "index" %> 
      <%= link_to "EDIT", edit_requirement_path(@requirement), :class=>"btn btn-primary"  %>    
    </span>
  </div>
  
  <div class="well table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th> Fields </th>
          <th> Values </th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Designation Name</td>
          <td><%= @requirement.designation.name %></td>      
        </tr>
        <tr>
          <td>Skils Required for this Position</td>
          <td><%= @requirement.skill %></td>      
        </tr>
        <tr>
          <td>Job Description for this Position</td>
          <td><%= @requirement.description %></td>      
        </tr>
        <tr>
          <td>Management comment</td>
          <td><%= @requirement.mgt_comment %></td>      
        </tr>
        <tr>
          <td>Start Date</td>
          <td><%= print_date(@requirement.sdate) %></td>      
        </tr>
        <tr>
          <td>End Date</td>
          <td><%= print_date(@requirement.edate) %></td>      
        </tr>
        <tr>
          <td>Experience Required for this Position</td>
          <td><%= @requirement.exp %></td>      
        </tr>
        <tr>
          <td>Requirement Posted by</td>
          <td><%= @requirement.posted_by.name %></td>      
        </tr>
        <tr>
          <td>Requirement Owner</td>
          <td><%= @requirement.employee.name %></td>      
        </tr>
        <tr>
          <td>Group</td>
          <td><%= @requirement.group.name %></td>      
        </tr>
        <tr>
          <td>Customer</td>
          <td><%= @requirement.account.name %></td>      
        </tr>
        <tr>
          <td>Type</td>
          <td><%= @requirement.req_type %></td>      
        </tr>
      </tbody>
    </table>
		<div>
		<span class="lead"><%= "Req Description" %></span>
		<table class="table table-striped table-condensed">
      <thead>
		    <tr>
			    <th>Forwarded</th>
			    <th>Shortlisted</th>
			    <th>Scheduled</th>
			    <th>Rejected</th>
			    <th>Hold</th>
			    <th>Offered</th>
			    <th>Joining</th>
		    </tr>
      </thead>
		  <tbody>
		    <tr>
			    <td><%= @forwards.size %></td>
			    <td><%= @shortlisted.size %></td>
			    <td><%= @scheduled.size %></td>
			    <td><%= @rejected.size %></td>
			    <td><%= @hold.size %></td>
			    <td><%= @offered.size %></td>
			    <td><%= @joining.size %></td>
		    </tr>
		  </tbody>
		</table>
		</div>
  </div>
</div>
