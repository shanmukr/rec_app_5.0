<%= form_for(@group, :url =>  url_for(:host => "localhost:3000", :controller => "groups", :action => (button_tag == "Update" ? "update" : "create"))) do |f| %>
  <% @group.errors.full_messages.each do |msg| %>
    <%= msg %>
	<% end %>
  <table id="group_form_table">
    <tr>
      <td> Department Name </td>
      <td> <%= f.text_field :name %> </td>
    </tr>
    <tr>
      <td> Owner of this group </td>
      <td> <%= collection_select(:group, :employee_id, @employees, :id, :name, { :prompt => "Please Select" }) %> </td>
    </tr>
    <tr>
      <td class="group_submit_button" colspan="2">
        <%= f.submit("#{button_tag}") %>
      </td>
    </tr>
  </table>
<% end %>
